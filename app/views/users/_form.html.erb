<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :description, "Description" %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :skills, "Skills" %><br />
    <%= f.text_field :skills %>
  </p>
  <p>
    <%= f.label :ideas, "Ideas" %><br />
    <%= f.text_field :ideas %>
  </p>
  <p><%= f.submit("Update") %></p>
<% end %>
